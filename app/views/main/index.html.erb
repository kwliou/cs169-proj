<% content_for :title, "re.factored" %>

<div id ="header">
  <% if @current_user %>
    Welcome, <%=h @current_user.first_name %> <%=h @current_user.last_name %>! Want to <%= link_to "sign out", logout_path %>?
    <% else %>
    Welcome! Want to <%= link_to "register", new_user_path %>?
  <% end %>
  <span id="school">
    You are in <a href="switch_school">UC Berkeley</a>
  </span>
</div>
<div id="banner">
  <% if @current_user %>
    <span id ="college_logo">
    <img alt="Berkeley" src="/images/school_logo.png" />
  </span>
  <% else %>
      <% form_for @user_session do |f| %>
        <table id="banner_right">
          <tr>
            <td id="input_label"><%= f.label :username, "Username", :class => "input_label" %></td>
            <td id="input_label"><%= f.label :password, "Password", :class => "input_label" %></td>
          </tr>
          <tr>
            <td><%= f.text_field :username, :size => 16 %></td>
            <td><%= f.password_field :password, :size => 16 %></td>
        <td><input type="checkbox" style="margin-left: 5px" /></td>
        <td><%= f.submit "", :class => "login_button", :onfocus => "this.blur()", :tabindex => 1000 %></td>
        <a class="login_button_load"></a>
        </tr>
        </table>
      <% end %>
    
  <% end %>
</div>
<div>
  <ul id ="breadcrumbs">
    <li class="breadcrumbs_a"><a href="">Home</a></li>
  </ul>
</div>

<div id="content">
    <div id="content_left">
      <div id="courses">
        <span class="section_header">Subscribed Courses</span>
        <% @courses.each do |course| %>
            <% link_to course, :class => "name" do %>
              <span class="course"><%=h course.department %> <%=h course.number %></span>
              <span class="course_info"><%=h course.name %></span>
            <% end %>
          <%= link_to 'Edit', edit_course_path(course) %>
          <br />
        <% end %>
        <br />
        <%= link_to 'Edit Subscriptions', "edit" %>
        <%= link_to "New course", new_course_path %>
      </div>
      <br />
      <div id="otherstuff">
        <span class="section_header">Latest Posts</span>
      </div>
    </div>
</div>

<div id="calendar">
  <a id="calendar_title" href="calendar">Upcoming Events</a>
  <ul>
    <li class="calendar_entry">Oct 11 <a href="item1">CS 169 Midterm 1</a></li>
    <li class="calendar_entry">Oct 11 <a href="item1">CS 188 Midterm 2</a></li>
    <li class="calendar_entry">Oct 12 <a href="item1">CS 188 Project 2</a></li>
  </ul>
</div>

<br />