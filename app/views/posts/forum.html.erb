<table>
 <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Commented at</th>
    <th>Tags</th>
  </tr>
<% @posts.each do |post| %>
    <tr>
      <td><%=h post.title %></td>
      <td><%=h post.body %></td>
      <td><%=h post.commented_at %></td>
      <td><%=h post.tags %></td>
      <td><%= link_to 'Show', [@course, @item, post] %></td>
      <!--td><%= link_to 'Edit', edit_user_post_path(post.user, post) %></td-->
      <!--td><%= link_to 'Destroy', [post.user, post], :confirm => 'Are you sure?', :method => :delete %></td-->
    </tr>
  <% end %>
</table>

