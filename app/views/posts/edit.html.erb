<% content_for :title, "#{@course.abbr} | #{@item.name} | Forum | Post Edit" %>

<h1>Editing post</h1>

<% form_for([@course, @item, @post]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [@course, @item, @post] %> |
<%= link_to 'Back', course_item_posts_path(@course, @item) %>