<h1>Listing posts from <%=h @user.first_name %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Commented at</th>
    <th>Tags</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%=h post.title %></td>
      <td><%=h post.body %></td>
      <td><%=h post.commented_at %></td>
      <td><%=h post.tags %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br />

<%= link_to 'New post', new_post_path %>