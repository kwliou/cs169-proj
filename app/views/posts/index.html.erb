<div id="content">
  <% form_tag course_item_posts_path(@course, @item), :method => :get do %>
    <ul style="margin: 0; padding-left: 0">
      <li style="margin: 0; display: inline">Filter by tags:</li>
      <% @tags.each do |tag| %>
        <li style="margin: 0; display: inline">
          <%= link_to_remote tag,
              {:update => 'forum_posts',
              :url => course_item_pposts_url(@course, @item, :tags => tag),
              :loading => "document.getElementById('forum_posts').innerHTML = 'Searching...'"},
              :href => course_item_posts_url(@course, @item, :tags => tag) %><%= ', ' if @tags.last != tag %>
        </li>
      <% end %>
    </ul>
    <% text_field_tag 'tags' %>
    <% submit_tag 'Search Tags', :name => nil %>
  <% end %><br />
  <table id="forum_posts">
