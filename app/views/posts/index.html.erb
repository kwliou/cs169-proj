<h1>Listing posts from <%=h @user.first_name %> <%=h @user.last_name %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Commented at</th>
    <th>Tags</th>
    <th>Forum</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%=h post.title %></td>
      <td><%=h post.body %></td>
      <td><%=h post.commented_at %></td>
      <td><%=h post.tags %></td>
      <td><%=h post.item.name %></td>
      <td><%= link_to 'Show', [post.item.course, post.item, post] %></td>
      <!--td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td-->
      <!--td><%= link_to 'Destroy', [@user, post], :confirm => 'Are you sure?', :method => :delete %></td-->
    </tr>
  <% end %>
</table>
<br />