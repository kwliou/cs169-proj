 <ul class ="breadcrumbs">
    <li class=""><%= link_to "Home", root_path, :class => "blue awesome" %></li>
    <li class="breadcrumbs_arrow">&#9654;</li>
    <li class=""><%= link_to "Courses", courses_path, :class => "blue awesome" %></li>
 </ul>
  
<div id="courses_container">
<h1>Listing courses</h1>

<table id="courses_list">
  <tr>
    <th>Department</th>
    <th>Number</th>
    <th>Days</th>
    <th>Term</th>
    <th>Year</th>
    <th>Description</th>
    <th>Name</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%=h course.department %></td>
    <td><%=h course.number %></td>
    <td><%=h course.days %></td>
    <td><%=h course.term %></td>
    <td><%=h course.year %></td>
    <td><%=h course.description %></td>
    <td><%=h course.name %></td>
    <td><%= link_to 'View', course %></td>
    <td><%= link_to 'Subscribe', url_for(:controller => 'courses', :action => 'subscribe', :id => course.id) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New course', new_course_path %>
</div>

