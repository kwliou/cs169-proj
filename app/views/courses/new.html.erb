<% content_for :title, "Courses | New" %>

<%= render '/layouts/nav', :navigation =>
  [["Courses", courses_path]] %>

<div id="content">
  <h1>New course</h1>

  <% form_for(@course) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :department %><br />
      <%= text_field_with_auto_complete :course, :department, {}, {:method => :get} %>
      <!-- f.select :department, @depts, {}, :size => 5 -->
    </p>
    <p>
      <%= f.label :number %><br />
      <%= f.text_field :number %>
    </p>
    <p>
      <%= f.label :days %><br />
      <%= f.text_field :days %>
    </p>
    <p>
      <%= f.label :term %><br />
      <%= f.text_field :term %>
    </p>
    <p>
      <%= f.label :year %><br />
      <%= f.text_field :year %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>

  <%= link_to 'Back', courses_path %>
</div>